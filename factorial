function factorialize(num) {
  if (num <= 0) {
    return 1;
  }
  return num * factorialize(num - 1);
}

factorialize(5);

// version with range limits
function factorial(n)
{
  if ( 12 < n < 0 ) {
    throw new RangeError("The argument must be between 0 and 12.");
  }
  
  if ( n === 0 ) {
    return 1
  }
  
  return n * factorial( n - 1 )
}
